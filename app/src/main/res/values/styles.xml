<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LightEditText">
        <item name="android:background">@drawable/edit_text_fade</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">#bb000000</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NewPostEditText">
        <item name="android:background">@color/colorUltraLight</item>
        <item name="android:paddingLeft">@dimen/basicLayoutPadding</item>
        <item name="android:paddingRight">@dimen/basicLayoutPadding</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="AppTheme.RedButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/colorInverse</item>
    </style>

    <style name="AppTheme.GreenButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/colorInverse</item>
    </style>

    <style name="AppTheme.FadeButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_fade</item>
        <item name="android:textColor">#787878</item>
    </style>

    <style name="AppTheme.MBar" parent="android:Widget.ImageButton">
        <item name="android:background">#00000000</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>